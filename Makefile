# Compile configuration
DMD ?= dmd
DEBUGFLAGS ?= -g -debug
RELEASEFLAGS ?= -O -release -noboundscheck

OUTPUTDIR ?= lib
LIBEXT ?= a

LINKERFLAGS ?= -L-ldl -L-lev $(LDFLAGS)

COMMONFLAGS = -lib -Ilibev -w -wi -de $(LINKERFLAGS) $(DFLAGS)

# Targets
DEBUG_NAME = $(OUTPUTDIR)/dirk-d.$(LIBEXT)
RELEASE_NAME = $(OUTPUTDIR)/dirk.$(LIBEXT)

.PHONY: debug release clean

all: debug release

debug: $(DEBUG_NAME)
release: $(RELEASE_NAME)

$(DEBUG_NAME): $(SOURCES)
	$(DMD) $(DEBUGFLAGS) $(COMMONFLAGS) -of$(DEBUG_NAME) $(SOURCES)

$(RELEASE_NAME): $(SOURCES)
	$(DMD) $(RELEASEFLAGS) $(COMMONFLAGS) -of$(RELEASE_NAME) $(SOURCES)

clean:
	rm $(DEBUG_NAME)
	rm $(RELEASE_NAME)

# Automatically generated by list_sources.d
IRC_SOURCES = \
	irc/ctcp.d \
	irc/sslclient.d \
	irc/testing.d \
	irc/cachingclient.d \
	irc/dcc.d \
	irc/exception.d \
	irc/client.d \
	irc/linebuffer.d \
	irc/protocol.d \
	irc/util.d \
	irc/eventloop.d

SSL_SOURCES = \
	ssl/openssl.d

LOADER_SOURCES = \
	loader/loader.d \
	loader/windows.d \
	loader/posix.d

LIBEV_SOURCES = \
	libev/deimos/ev.d

SOURCES = $(IRC_SOURCES) $(SSL_SOURCES) $(LOADER_SOURCES) $(LIBEV_SOURCES)  
